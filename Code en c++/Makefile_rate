CC=gcc
CXX=g++
RM=rm -f
CPPFLAGS=-g
LDFLAGS=-g
LDLIBS=

SRCS=main.cpp glut.cpp matrix.cpp
OBJS=$(subst .cpp,.o,$(SRCS))

all: test

runtests: all
	./test

test: $(OBJS)
	$(CXX) $(LDFLAGS) -o test $(OBJS) $(LDLIBS) 

main.o: main.cpp glut.hpp matrix.h

glut.o: glut.cpp glut.hpp matrix.h

matrix.o: matrix.cpp matrix.h
clean:
	$(RM) $(OBJS)

distclean: clean
	$(RM) test
